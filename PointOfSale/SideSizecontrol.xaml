<UserControl x:Class="PointOfSale.SideSizecontrol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="1" FontSize="60" TextAlignment="Center">
            Size
        </TextBlock>
        <RadioButton Grid.Row="1" Grid.Column="1" FontSize="40">
            Small
        </RadioButton>
        <RadioButton Grid.Row="2" Grid.Column="1" FontSize="40">
            Medium
        </RadioButton>
        <RadioButton Grid.Row="3" Grid.Column="1" FontSize="40">
            Large
        </RadioButton>
    </Grid>
</UserControl>
